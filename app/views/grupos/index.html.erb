<p id="notice"><%= notice %></p>

<h1>Grupos</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grupos.each do |grupo| %>
      <tr>
        <td><%= grupo.descricao %></td>
        <td><%= link_to 'Mostrar', grupo %></td>
        <td><%= link_to 'Editar', edit_grupo_path(grupo) %></td>
        <td><%= link_to 'Excluir', grupo, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Grupo', new_grupo_path %>
